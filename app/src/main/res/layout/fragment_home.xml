<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lavender"
    android:paddingBottom="20dp"
    tools:context=".fragment_home">

    <!-- TextView displaying the title "HomeStock" -->
    <TextView
        android:id="@+id/textViewHomeStock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/HomeStock"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@color/white"/>

    <ImageView
        android:id="@+id/searchButton"
        android:layout_width="900dp"
        android:layout_height="100dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="3dp"
        android:src="@drawable/img_rectangle1041"
        android:contentDescription="@string/Search"/>

    <EditText
        android:id="@+id/SearchViewItemSearch"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="10dp"
        android:text="@string/Search"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:importantForAutofill="no"
        android:inputType="text"
        android:hint="type in items to search for"/>

    <!-- ScrollView for the search functionality -->

    <!-- Button for editing items -->
    <ScrollView
        android:id="@+id/ScrollViewItems"
        android:layout_width="340dp"
        android:layout_height="400dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="140dp"
        android:layout_marginRight="10dp"
        android:contentDescription="@string/ScrollViewText"
        android:scrollbarAlwaysDrawVerticalTrack="true">

        <LinearLayout
            android:id="@+id/LinearLayoutOutside"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_background"
            android:orientation="vertical"
            android:padding="8dp">

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/ButtonEditItem"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"
        android:theme="@style/Base.Theme.PNP2Inventoryapp"
        android:text="@string/Edit"
        android:textSize="20sp" />


    <!-- ImageButton for adding items -->
    <ImageButton
        android:id="@+id/ButtonAddItem"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:theme="@style/Base.Theme.PNP2Inventoryapp"
        android:text="@string/AddButton"
        android:textSize="20sp"
        android:contentDescription="@string/add_add"
        android:src="@drawable/img_plus"
        />

    <ImageButton
        android:id="@+id/ButtonDelete"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="160dp"
        android:layout_alignParentBottom="true"
        android:theme="@style/Base.Theme.PNP2Inventoryapp"
        android:text="@string/AddButton"
        android:textSize="20sp"
        android:contentDescription="@string/delete_items_menu"
        android:src="@drawable/baseline_delete_24"
        />

</RelativeLayout>
