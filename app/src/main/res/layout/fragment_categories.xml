<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_categories"
    android:background="@color/lavender">


    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/ButtonFoodCategory"
        android:theme="@style/Base.Theme.PNP2Inventoryapp"
        android:text="@string/Food"
        android:textSize="40sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="@color/peach"
        android:onClick="navigateToFoodFragment"
        />


    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/ButtonOfficeCategory"
        android:theme="@style/Base.Theme.PNP2Inventoryapp"
        android:layout_alignParentEnd="true"
        android:text="@string/Office"
        android:textSize="40sp"
        android:backgroundTint="@color/peach"
        android:onClick="navigateToOfficeFragment"
        />

</RelativeLayout>
